{
  "name": "@yummies/core",
  "version": "1.0.0",
  "description": "Yummies Core",
  "keywords": [ "yummies", "react", "bem", "bemjson" ],
  "homepage": "https://github.com/yummies/core",
  "repository": "yummies/core",
  "contributors": [
    "Kir Belevich <kir@soulshine.in> (https://github.com/deepsweet)",
    "Denis Koltsov <iam@mistadikay.com> (https://github.com/mistadikay)"
  ],
  "main": "build/index.js",
  "files": [
    "build/",
    "LICENSE"
  ],
  "dependencies": {
    "react": "0.14.x",
    "lodash.isplainobject": "3.2.x"
  },
  "devDependencies": {
    "babel": "5.8.x",
    "babel-core": "5.8.x",
    "husky": "0.10.x",
    "eslint": "1.10.x",
    "babel-eslint": "4.1.x",
    "eslint-plugin-babel": "2.1.x",
    "mocha": "2.3.x",
    "chai": "3.4.x",
    "isparta": "3.5.x",
    "coveralls": "2.11.x",
    "jsdom": "7.0.x",
    "mocha-jsdom": "1.0.x",
    "chokidar-cli": "1.2.x"
  },
  "scripts": {
    "build": "rm -rf build/ && babel lib/ -d build/",
    "dev": "npm run build -- -w",
    "lint": "eslint lib test",

    "coverage": "rm -rf coverage/ && isparta cover _mocha -i lib/*.js -- -r babel/register test/setup.js test/lib/*.js",
    "tdd": "chokidar 'lib/*.js' 'test/lib/*.js' -c 'npm run coverage' --initial",
    "test": "npm run lint && npm run coverage",
    "travis": "npm run test && cat coverage/lcov.info | coveralls",

    "prepush": "npm run test",
    "prepublish": "npm run build"
  },
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=2.7.0"
  },
  "license": "MIT"
}
